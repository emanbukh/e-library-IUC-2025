# Koha Production Environment Configuration
# Copy this file to .env.production and update with your values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=koha
MYSQL_USER=kohauser
MYSQL_PASSWORD=your_secure_password

# Koha Configuration
KOHA_INSTANCE=library
KOHA_DOMAIN=.yourdomain.com
KOHA_OPAC_PORT=8080
KOHA_INTRANET_PORT=8081

# Koha Image
KOHA_IMAGE=main

# RabbitMQ Configuration
RABBITMQ_USER=koha
RABBITMQ_PASS=your_secure_rabbitmq_password
RABBITMQ_PORT=15672

# Elasticsearch Configuration
ELASTIC_SERVER=es:9200
KOHA_ELASTICSEARCH=yes

# Security (Change these!)
KOHA_ADMINUSER=admin
KOHA_ADMINPASS=your_secure_admin_password
KOHA_PASS=your_secure_koha_password

# Optional: External Database (if using external MariaDB/MySQL)
# DB_HOST=your_external_db_host
# DB_PORT=3306
# DB_NAME=koha
# DB_USER=kohauser
# DB_PASSWORD=your_secure_password 